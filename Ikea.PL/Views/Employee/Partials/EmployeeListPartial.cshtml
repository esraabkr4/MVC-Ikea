@model IEnumerable<EmployeeDTO>

@foreach (var employee in Model)
{
    var modalId = $"deleteModal_{employee.Id}";
    <tr>
        <td>@Html.DisplayFor(X => employee.Name)</td>
        <td>@Html.DisplayFor(X => employee.Email)</td>
        <td>@Html.DisplayFor(X => employee.Department)</td>
        <td>@Html.DisplayFor(X => employee.empType)</td>
        <td>@Html.DisplayFor(X => employee.Age)</td>
        <td>@Html.DisplayFor(X => employee.Salary)</td>
        <td>@Html.DisplayFor(X => employee.IsActive)</td>
        <td>@Html.DisplayFor(X => employee.gender)</td>
        <td>
            <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                <i class="fas fa-eye"></i>Details
            </a>
        </td>
        <td>
            <a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                <i class="fas fa-edit"></i>Update
            </a>
        </td>
        @* <td>
                        <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">
                            <i class="fas fa-trash"></i>Delete
                        </a>
                    </td> *@
        <td>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#@modalId">
                <i class="fas fa-trash"></i> Delete
            </button>
        </td>
    </tr>
    <!-- Modal -->
    <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="exampleModalLabel_@employee.Id" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel_@employee.Id">Delete This Employee</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete This Employee "<strong>@employee.Name</strong>"?
                </div>
                <div class="modal-footer">
                    <form asp-action="Delete" asp-route-id="@employee.Id" method="post">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}